<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.masterapp_v2.MainActivity$PlaceholderFragment"
    android:id="@+id/fragment_main"
    android:background="#ffffff" >

    <TextView
        android:id="@+id/select_tournament_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="147dp"
        android:text="Select Tournament"
        android:textSize="12pt" />

    <Button
        android:id="@+id/greater_toronto_central_Button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/select_tournament_TV"
        android:layout_below="@+id/select_tournament_TV"
        android:layout_marginTop="79dp"
        android:text="GTC"
        android:background="#80D983" />
    
    <Button 
        android:id="@+id/hawaii_Button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/select_tournament_TV"
        android:layout_below="@+id/select_tournament_TV"
        android:layout_marginTop="79dp"
        android:text="Hawaii"
        android:background="#80D983" />
    
    <Button 
        android:id="@+id/champs_Button"
        android:layout_height="wrap_content"
        android:layout_width="1dp"
        android:layout_alignLeft="@+id/select_tournament_TV"
        android:layout_alignRight="@+id/select_tournament_TV"
        android:layout_below="@+id/select_tournament_TV"
        android:layout_marginTop="140dp"
        android:text="World Championships"
        android:background="#80D983" />

</RelativeLayout>