<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_bio_layout"
     >
    
    <ImageView 
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="4dp"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:id="@+id/image"
        android:contentDescription="@string/portrait"/>
    <TextView 
        android:layout_alignTop="@+id/image"
        android:layout_toRightOf="@+id/image"
        android:layout_toEndOf="@+id/image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/position_TV"/>
    <TextView 
        android:layout_below="@+id/position_TV"
        android:layout_alignLeft="@+id/position_TV"
        android:layout_alignStart="@+id/position_TV"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rookie_year_TV"/>
    <TextView 
        android:layout_below="@+id/rookie_year_TV"
        android:layout_alignLeft="@+id/rookie_year_TV"
        android:layout_alignStart="@+id/rookie_year_TV"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/favourite_food_TV" />
    <TextView 
        android:id="@+id/name_TV"
        android:layout_alignLeft="@+id/image"
        android:layout_alignStart="@+id/image"
        android:layout_alignRight="@+id/image"
        android:layout_alignEnd="@+id/image"
        android:layout_below="@+id/image"
        android:layout_marginTop="6dp"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:gravity="center"/>
    <TextView 
        android:id="@+id/bio_TV"
        android:layout_alignLeft="@+id/image"
        android:layout_alignStart="@+id/image"
        android:layout_below="@+id/name_TV"
        android:layout_marginTop="6dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

</RelativeLayout>
